@model GuiaApp.Models.NegocioIndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}



@if (Model != null)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Categorias</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">Todas</li>
                        @foreach (var item in Model.categorias)
                        {
                            <li data-filter="@item.CategoriaFilter">@item.CategoriaNombre</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row featured__filter">
        @foreach (var item in Model.negocios)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mix @item.Filter fresh-meat">
                <div class="featured__item">
                    <div class="featured__item__pic set-bg" data-setbg="../img/Negocios/KaiNikkei.jpeg">
                        <ul class="featured__item__pic__hover">
                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                            <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                        </ul>
                    </div>
                    <div class="featured__item__text">
                        <h6><a href="#">@item.Nombre</a></h6>
                        <h5>$30.00</h5>
                    </div>
                </div>
            </div>
        }
    </div>
}


