@model GuiaApp.Models.NegocioIndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}



@if (Model != null)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Categorias</h2>
                </div>
                <div class="featured__controls">
                    <ul>
                        <li class="active" data-filter="*">Todas</li>
                        @foreach (var item in Model.categorias)
                        {
                            <li data-filter="@item.Filter">@item.Nombre</li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="row featured__filter">
        @foreach (var item in Model.negocios)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 mix @item.Filter fresh-meat">
                <div class="featured__item">
                    var ruta = "../"+@item.Ruta;
                    <div class="featured__item__pic set-bg" data-setbg="">
                        <ul class="featured__item__pic__hover">
                            @foreach (var red in item.Redes)
                            {
                                switch (red.Red)
                                {
                                    case "Facebook":
                                        <li><a href="@red.Recurso"><i class="@red.Icon"></i></a></li>
                                        break;
                                    case "Whatsapp":
                                        var linkwsp = "https://wa.me/" + @red.Recurso + "?text=Hola%2C+Gracias+la+Guia+de+Bienes+y+Servicios%2C+pude+conectarme+contigo";
                                        <li><a href="@linkwsp"><i class="@red.Icon"></i></a></li>
                                        break;
                                    case "Celular":
                                        var linkCel = "tel:+" + @red.Recurso;
                                        <li><a href="@linkCel"><i class="@red.Icon"></i></a></li>
                                        break;
                                }
                            }
                        </ul>
                    </div>
                    <div class="featured__item__text">
                        <h6><a href="#">@item.Nombre</a></h6>
                        @*<h5>$30.00</h5>*@
                    </div>
                </div>
            </div>
        }
    </div>
}


