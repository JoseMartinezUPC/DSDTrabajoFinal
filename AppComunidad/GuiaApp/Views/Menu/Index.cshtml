@{
    ViewData["Title"] = "ListarMenu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="box-header with-border">
    <a class="btn btn-primary" asp-action="Create"><i class="btn-text">Nuevo Menu&nbsp;&nbsp;</i><i class="fa fa-plus"></i></a>
    <a class="btn btn-primary" id="btn-dowload"><i class="btn-text">Exportar&nbsp;&nbsp;</i><i class="fa fa-download"></i></a>
</div>
<div class="box-body">
    <div class="row">
        <div class="col-sm-12">
            <table id="tblMenu" class="table table-striped table-bordered nowrap" style="width:100%">
                <thead class="bg-light-blue-active">
                    <tr>
                        <th>Nombre</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <script>
    var url = {
        Excel: '@Url.Action("Exportar", "Menu")',
        Pagination: '@Url.Action("Pagination", "Menu")',
        Edit: '@Url.Action("Edit", "Menu")',
        Delete: '@Url.Action("Delete", "Menu")'
    };
    </script>
    <script src="~/js/Menu/Index.js"></script>
}